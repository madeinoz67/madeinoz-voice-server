{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ESNext"],
    "types": ["bun-types"],
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "outDir": "./dist",
    "rootDir": "./src/ts",
    "baseUrl": "./src/ts",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["src/ts/**/*"],
  "exclude": ["node_modules", "dist", "src/py"]
}
