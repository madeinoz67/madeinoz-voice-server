# Qwen TTS Voice Server Configuration

# Main server port
PORT=8888

# Qwen TTS model configuration
# Recommended model for agent personalities: Qwen/Qwen3-TTS-12Hz-1.7B-VoiceDesign
# The model will be automatically downloaded to ~/.cache/huggingface/hub/
# and reused on subsequent runs.
QWEN_MODEL_PATH=

# Python TTS server port (internal, must differ from main server)
# Dev mode uses 7861, production uses 7860
QWEN_SERVER_PORT=7860

# Default voice ID for development
DEFAULT_VOICE_ID=marrvin

# Default voice ID (fallback when no voice_id specified)
DEFAULT_VOICE_ID=marrvin

# Volume control (0.0 to 1.0)
DEFAULT_VOLUME=1.0
