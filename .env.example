# voice-server Configuration

# Main server port
PORT=8888

# TTS Backend Selection
# Options: "mlx" (MLX-audio/Kokoro) or "qwen" (Qwen TTS)
# - mlx: Fast local TTS, 41 built-in voices, Apple Silicon only
# - qwen: Custom voice cloning, requires Python dependencies
TTS_BACKEND=mlx

# MLX-audio Configuration (when TTS_BACKEND=mlx)
MLX_MODEL=mlx-community/Kokoro-82M-bf16
MLX_STREAMING_INTERVAL=0.3

# Qwen TTS Configuration (when TTS_BACKEND=qwen)
# Recommended model for agent personalities: Qwen/Qwen3-TTS-12Hz-1.7B-VoiceDesign
# The model will be automatically downloaded to ~/.cache/huggingface/hub/
QWEN_MODEL_PATH=

# Python TTS server port (when TTS_BACKEND=qwen)
# Dev mode uses 7861, production uses 7860
QWEN_SERVER_PORT=7860

# Default voice configuration
DEFAULT_VOICE_ID=1
DEFAULT_VOLUME=1.0

# macOS Integration
ENABLE_MACOS_NOTIFICATIONS=true
