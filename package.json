{
  "name": "madeinoz-voice-server",
  "version": "0.1.0",
  "description": "TTS service using Qwen TTS model",
  "type": "module",
  "scripts": {
    "dev": "NODE_ENV=development bun run src/ts/server.ts",
    "dev:py": "uv run uvicorn src.py.qwen_tts_server:app --port 7861 --reload",
    "start": "bun run dist/server.js",
    "test": "bun test",
    "test:py": "uv run pytest",
    "lint": "eslint src/ts",
    "lint:fix": "eslint src/ts --fix",
    "lint:py": "uv run ruff check src/py tests/py",
    "lint:py:fix": "uv run ruff check --fix src/py tests/py",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "bun-types": "latest",
    "eslint": "^9.0.0",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.0.0"
  },
  "engines": {
    "bun": ">=1.0.0"
  }
}
